#!/bin/bash

    source ~/tinyos.sh

    slf=`ps ax | grep keepalive.cx2.python | grep -v grep | wc -l`

    # see fi we're already running
    if [ "${slf:=NULL}" != "2" ] ; then
        exit
    fi

    # restart the driver
    appdir="/root/smote/code/smap/trunk/devices/climatex2/"
    filename=`date +%Y%m%d_%H%M`
    cd ${appdir}
    while [ 1 ] ;
    do
        ans=`ps ax | grep "python -u ClimateSmap.py" | grep -v grep`
        if [ "${ans:=NULL}" != "NULL" ] ; then
            exit
        else
            nohup python -u ClimateSmap.py >> ${appdir}/log/${filename} 2>&1 &
        fi
        sleep 10
    done
